var jeanInfo = [
					{title: "Affliction Black Premium Blake Jean", description: "Football is a contact sport that starts in august"}, 
					{title: "Big Star Vintage Pioneer Jean", description: "blah blah blah blah blah"}, 
					{title: "BKE Aaron Jean", description: "blah blah blah blah"}
];




dataButton.addEventListener("click", function(){
	navWindow.openWindow(dataWindow, {animated: true});
	var border = Ti.UI.createView({
	backgroundColor: "#dbdbdb",
	height: 1,
	top: 20
	//Table Views//
	var jeans = Ti.UI.createTableView({
		top: border.top + border.height,
	});
	//Table View Sections//
	var jeanSection = Ti.UI.createTableViewSection({
		title: "Jean Information",
	});
	//Functions//
	var getDetail = function(){
		var detailWindow = Ti.UI.createWindow({
			backgroundColor: "#f5f5f5"
		});
			var detailTitleView = Ti.UI.createView({
			height: 65,
			backgroundColor: "#fff",
			top: 0
		});
			var detailBorder = Ti.UI.createView({
			backgroundColor: "#dbdbdb",
			height: 1,
			top: detailTitleView.height + detailTitleView.top
		});
			var detailTitleLabel = Ti.UI.createLabel({
			text: this.title,
			font: {fontSize: 20, fontFamily: "Arial", fontWeight: "bold"},
			top: 30,
			width: "100%",
			textAlign: "center"
		});	
		var detailText = Ti.UI.createLabel({
			text: this.desc,
			font: {fontSize: 14, fontFamily: "Arial", fontWeight: "bold"},
			top: detailBorder.height + detailBorder.top + 40,
			left: 10,
			right: 10,		
		});	
		var closeButton = Ti.UI.createLabel({
			text: "Close Window",
			backgroundColor: "#333",
			color: "#fff",
			height: 50,
			font: {fontSize: 12, fontFamily: "Arial", fontWeight: "bold"},
			width: "100%",
			bottom: 0,
			textAlign: "center"
		});
		var closeWindow = function(){
			detailWindow.close();
		};
		
		closeButton.addEventListener("click", closeWindow);
		
		detailTitleView.add(detailTitleLabel);
		detailWindow.add(detailTitleView, detailBorder, detailText, closeButton);
		
		detailWindow.open();
	};
	//Loops for Data//
	for(var i = 0, j = jeanInfo.length; i < j; i++){
		var jeanRow = Ti.UI.createTableViewRow({
			title: jeanInfo[i].title,
			desc: jeanInfo[i].description,
			hasChild: true
		});
			if(Ti.Platform.name === "iPhone OS"){
				fallRow.hasChild = false;
				fallRow.hasDetail = true;
			}
				jeanSection.add(jeanRow);
				jeanRow.addEventListener("click", getDetail);
		}
	//
	//
	jeans.setData(jeanSection);
	//
	titleView.add(titleLabel);
	mainWindow.add(titleView, jeans);
	
	
});





