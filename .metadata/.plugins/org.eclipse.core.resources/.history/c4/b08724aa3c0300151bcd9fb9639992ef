// JSON Object
var  jeanInfo = {
	"Jeans":{
		"theTitle": "Buckle Denim",
		"jeanList":[
			{
				"name": "Affliction Black Premium Blake Jean",
				"description": "This is a nice pair of jeans :)"
			},
			{
				"name": "Big Star Vintage Pioneer Jean",
				"description": "This is a vintage baby"
			},
			{
				"name": "BKE Aaron Jean",
				"description": "This is just a classy look son",
			}
		]
	}
};
dataButton.addEventListener("click", function(){
	navWindow.openWindow(dataWindow, {animated: true});
	var makeUI = function(){
		var spacing = 80;
		for(n in jeans){
			var titleLabel = Ti.UI.createLabel({
				text: jeans[n].theTitle,
				left: 15,
				right: 15,
				top: spacing,
				height: 25,
				backgroundColor: "#333",
				font: {fontSize: 22, fontFamily: "Verdana"},
				color: "#fafafa",
			});
			spacing = titleLabel.top + titleLabel.height + top;
			console.log(spacing);
			for(m in jeans[n].jeanList){
				var itemLabel = Ti.UI.createLabel({
					text: jeans[n].jeanList[m].description,
					details: jeans[n].jeanList[m].description,
					left: 30,
					right: 15,
					top: spacing,
					height 25,
					backgroundColor: "#ffffff",
					font: {fontSize: 22, fontFamily: "Verdana"},
					color: "#333"
				});
				dataWindow.add(itemLabel);
				spacing = itemLabel.top + itemLabel.height + 10;
			};
			dataWindow.add(titleLabel);
			spacing = itemLabel.top + itemLabel.height + 40;
		}
	}
	makeUI();
	dataWindow.open();
)};






