// this sets the background color of the master UIView (when there are no windows/tab groups on it)
Titanium.UI.setBackgroundColor('#000');
////
// Launch Page Window
var mainWindow = Ti.UI.createWindow({
	backgroundColor: "white",
});
//Launch Page Border
var mainBorder = Ti.UI.createView({
	backgroundColor: "#6a0000",
	height: 1,
	top: 20,
});
////
// Title View + Label
var titleView = Ti.UI.createView({
	backgroundColor: "#6a0000",
	height: 50,
	top: mainBorder.top + mainBorder.height,
	width: "100%",
});
var titleLabel = Ti.UI.createLabel({
	text: "The Final Stand",
	font: {fontSize: 18, fontFamily: "Arial Black", fontWeight: "bold"},
	width: "100%",
	textAlign: "center",
	top: "auto",
});
titleView.add(titleLabel);
////
// Gallery View + Label
var galleryView = Ti.UI.createView({
	backgroundColor: "#6a0000",
	height: 50,
	top: mainBorder.top + mainBorder.height,
	width: "100%",
});
var galleryLabel = Ti.UI.createLabel({
	text: "Gallery",
	font: {fontSize: 18, fontFamily: "Arial Black", fontWeight: "bold"},
	width: "100%",
	textAlign: "center",
	top: "auto",
});
galleryView.add(galleryLabel);
////
// Data View + Label
var dataView = Ti.UI.createView({
	backgroundColor: "#6a0000",
	height: 50,
	top: mainBorder.top + mainBorder.height,
	width: "100%",
});
var dataLabel = Ti.UI.createLabel({
	text: "The Last Squad",
	font: {fontSize: 18, fontFamily: "Arial Black", fontWeight: "bold"},
	width: "100%",
	textAlign: "center",
	top: "auto",
});
dataView.add(dataLabel);
////
// Custom View + Label
var customView = Ti.UI.createView({
	backgroundColor: "#6a0000",
	height: 50,
	top: mainBorder.top + mainBorder.height,
	width: "100%",
});
var customLabel = Ti.UI.createLabel({
	text: "Create a Squad Member",
	font: {fontSize: 18, fontFamily: "Arial Black", fontWeight: "bold"},
	width: "100%",
	textAlign: "center",
	top: "auto",
});
customView.add(customLabel);
////
// Course Label
var courseLabel = Ti.UI.createLabel({
	text: "VFW Term 1505//Bryan Botsford",
	font: {fontSize: 12, fontFamily: "Arial Black", fontWeight: "bold"},
	width: "100%",
	textAlign: "center",
	top: customView.height + customView.top + 40,
});
// Loads the launchFunction javascript file
var load = require("galleryFunction, dataFunction, customFunction");
// Opens New Window
mainWindow.add(mainBorder, titleView, galleryView, dataView, customView, courseLabel);
mainWindow.open();