// this sets the background color of the master UIView (when there are no windows/tab groups on it)
Titanium.UI.setBackgroundColor('#000');
////
// Launch Array
var launchArray = [{title: "Final Stand"}, {title: "Gallery"}, {title: "The Last Squad"}, {title: "Create a Squad Member"}];
////
// Launch Page Window
var mainWindow = Ti.UI.createWindow({
	backgroundColor: "white",
});
////
//Launch Page Border
var mainBorder = Ti.UI.createView({
	backgroundColor: "#6a0000",
	height: 1,
	top: 20,
});
////
// Loop
for(var i = 0, j = launchArray.length; i < j; i++){
	var launchView = Ti.UI.createView({
		backgroundColor: "#6a000",
		borderRadius: 20,
		borderWidth: 1,
		height: 50,
		top: 50 + 10,
		width: "100%",
	});	
	var launchLabel = Ti.UI.createLabel({
		text: launchArray[i].title,
		font: {fontSize: 18, fontFamily: "Arial Black", fontWeight: "bold"},
		width: "100%",
		textAlign: "center",
		top: "auto"
	});
	launchView.add(launchLabel);
};






// Loads the launchFunction javascript file
//var load = require("launchFunction");
// Opens New Window
mainWindow.add(mainBorder);
mainWindow.open();
